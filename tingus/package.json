{
  "name": "tingus",
  "version": "0.3.0",
  "private": true,
  "main": "src/electron-starter.js",
  "homepage": "./",
  "author": "Georg Steyn",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantsolutions/ui_test_creator.git"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_START_URL=http://localhost:3000 electron .",
    "win": "electron-builder -w",
    "publish": "electron-builder build -w -p onTagOrDraft"
  },
  "build": {
    "appId": "com.keyboardninjas.tingus",
    "productName": "Tingus",
    "copyright": "Copyright Â© 2018 ${author}",
    "files": [
      "./dist",
      "./renderer",
      "main.js",
      "updater.js"
    ],
    "directories": {
      "output": "release-builds"
    },
    "extraFiles": [
      {
        "from": "../backend/dist",
        "to": "."
      },
      {
        "from": "../backend/kill_Backend.bat",
        "to": "./kill_Backend.bat"
      },
      {
        "from": "../backend/settings.json",
        "to": "./settings.json"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "publisherName": "Keyboard Ninjas",
      "verifyUpdateCodeSignature": false,
      "icon": "./keyboardninja_ElW_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "menuCategory": true,
      "installerIcon": "./keyboardninja_ElW_icon.ico",
      "uninstallerIcon": "./keyboardninja_ElW_icon.ico",
      "installerSidebar": "",
      "uninstallerSidebar": ""
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "4.1.1",
    "electron-log": "2.2.14",
    "electron-updater": "^2.21.10",
    "node-sass-chokidar": "1.3.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "reactstrap": "6.1.0"
  },
  "devDependencies": {
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.9.1",
    "npm-run-all": "4.1.3"
  }
}
